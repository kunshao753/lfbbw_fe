			},
			goSpecialities(){
				uni.navigateTo({
					url:'../../specialities/specialitiesList'
				})
			},
			goStudentInfo(){
				uni.navigateTo({
					url:'../../userinfo/studentinfo'
				})
			},
			goProbability(key){
