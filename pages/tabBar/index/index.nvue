				searchVal: '',
				schoolUrl:'../../school/schoolList',
				loginUrl:'../../login/login',
				array: [{name:'北京'},{name: '河北'}, {name:'河南'}, {name:'天津'}],
				index: 1,
                list: [{
                        id: 'view',
